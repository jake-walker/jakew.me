
<%
var pageTitle = page.title || "";
if (is_archive()) pageTitle = "Archives";
if (is_tag()) pageTitle = "Tag: " + page.tag;
if (is_category()) pageTitle = "Category: " + page.category;
if (is_month()) pageTitle += ": " + page.month + "/" + page.year;
if (is_year() && !is_month()) pageTitle += ": " + page.year;
var windowTitle = pageTitle + ((pageTitle != "") ? " | " : "") + config.title;
%>

<!DOCTYPE html>
<html lang="<%= config.language %>">
<head>
  <!-- responsive and requried meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title><%= windowTitle %></title>

  <!-- css -->
  <link href="https://fonts.googleapis.com/css?family=Inconsolata|Raleway|Roboto+Slab&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/jake.css">

  <!-- favicon and theme meta tags -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#65c9ff">
  <meta name="apple-mobile-web-app-title" content="Jake Walker">
  <meta name="application-name" content="Jake Walker">
  <meta name="msapplication-TileColor" content="#2d89ef">
  <meta name="theme-color" content="#65c9ff">

  <meta name="p:domain_verify" content="a7c5739869604e2d80aec47c23d797ba"/>

  <!-- social media meta tags -->
  <meta property="og:image" content="https://jakew.me/og-image.jpg">
  <meta property="og:image:width" content="279">
  <meta property="og:image:height" content="279">
  <meta property="og:title" content="Jake Walker">
  <meta property="og:description" content="Hi! I'm Jake Walker, a Developer and Tech Enthusiast living in the United Kingdom.">
  <meta property="og:url" content="https://jakew.me">

  <!-- seo meta tags -->
  <meta name="description" content="Hi! I'm Jake Walker, a Developer and Tech Enthusiast living in the United Kingdom." />
  <meta name="keywords" content="blog, jake walker, developer, portfolio, tech, technology, dev, nodejs, javascript, raspberry pi, arduino, maker, electronics, iot, node, python" />
  <meta name="author" content="metatags generator">
  <meta name="robots" content="index, follow">
  <meta name="revisit-after" content="1 month">
</head>
<body>

<div class="content">
  <% if (is_home()) { %><div class="hero"><% } %>
    <%- partial('partials/nav'); %>
  <% if (is_home()) { %><div class="hero-content"><%- partial('partials/hero') %></div></div><% } %>

  <% if (!is_home()) { %>
    <%- partial('partials/meta-jumbotron.ejs', {
      pageTitle: pageTitle
    }); %>
  <% } %>

  <div class="container" id="main-content">
    <div class="row">
      <div class="col-lg-8">
        <%- body %>
      </div>
      <div class="col-lg-4">
        <%- partial('sidebar/gpg'); %>
        <%- partial('sidebar/tagcloud'); %>
        <%- partial('sidebar/recentposts'); %>
        <%- partial('sidebar/social'); %>
        <%- partial('sidebar/archives'); %>
      </div>
    </div>
  </div>
</div>

<% if (is_post()) { %>
  <div class="bg-dark" id="comments">
    <div class="container">
      <%- partial('partials/comments'); %>
    </div>
  </div>
<% } %>

<%- partial('partials/footer'); %>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<script defer src="https://use.fontawesome.com/releases/v5.7.2/js/all.js" integrity="sha384-0pzryjIRos8mFBWMzSSZApWtPl/5++eIfzYmTgBBmXYdhvxPc+XcFEk+zJwDgWbP" crossorigin="anonymous"></script>
</body>
</html>
